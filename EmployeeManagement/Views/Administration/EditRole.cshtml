@model EditRoleViewModel;

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="administration" asp-action="listroles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role:</h3>
        </div>
        <div class="card-body">
            @if (Model.UserNames.Any())
            {
                foreach (string name in Model.UserNames)
                {
                    <h5 class="card-title">@name</h5>
                }
            }
            else
            {
                <h5 class="card-title">There is no users in this role yet.</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="administration" asp-action="editusersinrole" asp-route-roleid="@Model.Id" class="btn btn-primary">Manage users in role</a>
        </div>
    </div>
</form>