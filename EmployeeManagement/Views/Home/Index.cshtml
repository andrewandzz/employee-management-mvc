@model IEnumerable<Employee>;
@{
    ViewBag.Title = "Employees List";
}
<h3>@ViewBag.Title</h3>

<div class="card-deck">
    @foreach (Employee employee in Model)
    {
        string imagePath = "~/images/" + (employee.PhotoFileName ?? "noimage.jpg");

        <div class="card m-3 user-card">
            <div class="card-header">
                <h3 class="text-nowrap">@employee.Name</h3>
            </div>
            <div class="user-card-image">
                <img class="card-img-top" src="@imagePath" asp-append-version="true" />
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId" class="btn btn-primary m-1">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>